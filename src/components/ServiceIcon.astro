  )}

  {variant === "herrajes" && (
    <svg
      viewBox="0 0 24 24"
      class="h-[1.4rem] w-[1.4rem]"
      fill="none"
      stroke="currentColor"
      stroke-width="1.7"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <rect x="4.5" y="8" width="9" height="8" rx="2" />
      <circle cx="8.5" cy="12" r="1" />
