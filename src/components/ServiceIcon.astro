---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const t = title.toLowerCase();

type Variant =
  | "urgencias"
  | "reparaciones"
  | "cristal"
  | "blindex"
  | "herrajes"
  | "cierrapuertas"
  | "vehiculos"
  | "default";

let variant: Variant = "default";

if (t.includes("urgencias") || t.includes("guardia")) {
  variant = "urgencias";
} else if (t.includes("reparaciones") || t.includes("arreglo")) {
  variant = "reparaciones";
} else if (t.includes("blindex") || t.includes("templado")) {
  variant = "blindex";
} else if (t.includes("cristal") || t.includes("vidriados") || t.includes("vidrio")) {
  variant = "cristal";
} else if (t.includes("herrajes") || t.includes("cerraduras") || t.includes("cilindros")) {
  variant = "herrajes";
} else if (t.includes("cierra puertas") || t.includes("cierrapuertas")) {
  variant = "cierrapuertas";
} else if (t.includes("veh√≠culos") || t.includes("vehiculos") || t.includes("auto")) {
  variant = "vehiculos";
}

const baseClasses =
  "inline-flex h-9 w-9 items-center justify-center rounded-xl border text-sm";

const variantClasses =
  variant === "urgencias"
    ? "border-red-500/70 bg-red-500/10 text-red-200"
    : variant === "reparaciones"
    ? "border-amber-400/70 bg-amber-400/10 text-amber-100"
    : variant === "cristal"
    ? "border-cyan-400/70 bg-cyan-400/10 text-cyan-100"
    : variant === "blindex"
    ? "border-sky-400/70 bg-sky-400/10 text-sky-100"
    : variant === "herrajes"
    ? "border-emerald-400/70 bg-emerald-400/10 text-emerald-100"
    : variant === "cierrapuertas"
    ? "border-violet-400/70 bg-violet-400/10 text-violet-100"
    : variant === "vehiculos"
    ? "border-orange-400/70 bg-orange-400/10 text-orange-100"
    : "border-slate-600 bg-slate-900/80 text-slate-200";
---

<span class={baseClasses + " " + variantClasses} aria-hidden="true">
  {variant === "urgencias" && (
    <svg
      viewBox="0 0 24 24"
      class="h-[1.4rem] w-[1.4rem]"
      fill="none"
      stroke="currentColor"
      stroke-width="1.7"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <rect x="7" y="8" width="10" height="9" rx="3" />
      <path d="M5 17h14" />
      <path d="M12 3.5v2" />
      <path d="M6 4.5 7 6" />
      <path d="M18 4.5 17 6" />
      <path d="M4.5 10H3" />
      <path d="M21 10h-1.5" />
    </svg>
  )}

  {variant === "reparaciones" && (
    <svg
      viewBox="0 0 24 24"
      class="h-[1.4rem] w-[1.4rem]"
      fill="none"
      stroke="currentColor"
      stroke-width="1.7"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <rect x="5" y="9" width="8" height="9" rx="2" />
      <path d="M8.5 9V7.5a3.5 3.5 0 0 1 7 0V9" />
      <circle cx="9" cy="13" r="1" />
      <path d="M9 14v2" />
      <path d="M13.5 7.5 17 4a2 2 0 0 1 1.8 3.1L17 8.5" />
