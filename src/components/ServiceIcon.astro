      <path d="M18 7l2 2" />
      <path d="M16.5 8.5l1.5 1.5" />
    </svg>
  )}

  {variant === "cierrapuertas" && (
    <svg
      viewBox="0 0 24 24"
      class="h-[1.4rem] w-[1.4rem]"
      fill="none"
      stroke="currentColor"
      stroke-width="1.7"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <rect x="6" y="4" width="9" height="16" rx="1.2" />
